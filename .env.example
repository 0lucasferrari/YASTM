NODE_ENV=development
PORT=3000

# Option 1: Full connection URL (password must be URL-encoded if it contains @, #, %, etc.)
# DATABASE_URL=postgresql://user:password@localhost:5432/yastm
# DATABASE_URL_TEST=postgresql://user:password@localhost:5432/yastm_test

# Option 2: Separate components (recommended when password has special characters)
DB_CLIENT=pg
DB_HOST=localhost
DB_USER=user
DB_PASSWORD=your-password-with-special-chars@#%
DB_NAME=yastm
DB_PORT=5432
DB_NAME_TEST=yastm_test

JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=10
